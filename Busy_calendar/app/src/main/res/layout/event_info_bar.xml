<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blueMonthBar"
    android:layout_width="match_parent"
    android:layout_height="54dp" tools:showIn="@layout/activity_event_info">

    <TextView
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/selectedDayMonthYear"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageButton
        android:id="@+id/delete_event"
        android:layout_gravity="end|center_vertical"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_delete_24dp"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/accept_button"/>
    <ImageButton
        android:id="@+id/back"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_back_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/exit_button"/>

</FrameLayout>