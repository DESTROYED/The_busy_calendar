<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blueToolBar"
              android:orientation="vertical">
    <include layout="@layout/silence_bar"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_for_switch"
            android:text="@string/ringer_silent_mode_switch"/>
        <Switch
            android:id="@+id/ringer_silent_mode"
            style="@style/switch_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_for_switch"
            android:text="@string/system_sounds_switch"/>
        <Switch
            android:id="@+id/system_sounds"
            style="@style/switch_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_for_switch"
            android:text="@string/notifications_switch"/>
        <Switch
            android:id="@+id/notifications"
            style="@style/switch_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_for_switch"
            android:text="@string/alarm_sound_switch"/>
        <Switch
            android:id="@+id/alarm_sound"
            style="@style/switch_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/phone_ring_switch"
            style="@style/tv_for_switch"/>
        <Switch
            android:id="@+id/phone_ring"
            style="@style/switch_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/tv_for_switch"
            android:text="@string/music_sound_switch"/>
        <Switch
            android:id="@+id/music_sound"
            style="@style/switch_style"/>
    </LinearLayout>
</LinearLayout>