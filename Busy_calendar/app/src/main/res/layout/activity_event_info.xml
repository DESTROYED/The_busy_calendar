<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/blueToolBar"
    android:layout_height="match_parent">
    <include layout="@layout/event_info_bar"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="From:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/from_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="To:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/to_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Alert:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Status:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Socials:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Vk:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/socials_vk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Facebook:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/socials_facebook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>