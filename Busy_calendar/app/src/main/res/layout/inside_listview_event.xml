<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/inside_listview_event">
    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="5dp"
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_inside_event_listview" />
    <TextView
        android:layout_marginLeft="5dp"
        style="@style/text_inside_event_listview"
        android:text="Name"
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="5dp"
        style="@style/text_inside_event_listview"
        android:text="From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="5dp"
        style="@style/text_inside_event_listview"
        android:text="From"
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="5dp"
        style="@style/text_inside_event_listview"
        android:text="To:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="5dp"
        style="@style/text_inside_event_listview"
        android:text="To"
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>