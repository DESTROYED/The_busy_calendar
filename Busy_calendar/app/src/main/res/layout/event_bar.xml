<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/event"
    style="@style/some_toolbar">

    <TextView
        style="@style/textViewAndEditText"
        android:id="@+id/selectedDayMonthYear"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageButton
        android:id="@+id/save_event"
        android:layout_gravity="end|center_vertical"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_save_24dp"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/accept_button"/>
    <ImageButton
        android:id="@+id/close_event"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_back_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/exit_button"/>

</FrameLayout>