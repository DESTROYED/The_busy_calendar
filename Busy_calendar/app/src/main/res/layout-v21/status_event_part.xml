<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_marginTop="205dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:showIn="@layout/event">
    <TextView
        android:textColor="@color/textNames"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/status_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <EditText
        android:id="@+id/checkbox_status"
        android:visibility="invisible"
        android:textColorHint="@color/text"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="@string/status_textview"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:padding="5dp"/>
</LinearLayout>